{
  "name": "Distributed Notification System",
  "description": "A scalable microservices system for sending email and push notifications",
  "repository": "https://github.com/Kalanza/distributed-notification-system",
  "keywords": [
    "notifications",
    "microservices",
    "fastapi",
    "rabbitmq",
    "redis"
  ],
  "stack": "heroku-22",
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "addons": [
    {
      "plan": "heroku-postgresql:mini",
      "as": "DATABASE"
    },
    {
      "plan": "heroku-redis:mini",
      "as": "REDIS"
    },
    {
      "plan": "cloudamqp:lemur",
      "as": "RABBITMQ"
    }
  ],
  "env": {
    "PYTHONPATH": {
      "description": "Python path for imports",
      "value": "/app"
    },
    "LOG_LEVEL": {
      "description": "Logging level",
      "value": "INFO"
    },
    "SMTP_HOST": {
      "description": "SMTP server host for email notifications",
      "value": "smtp.gmail.com"
    },
    "SMTP_PORT": {
      "description": "SMTP server port",
      "value": "587"
    },
    "SMTP_USER": {
      "description": "SMTP username/email",
      "required": true
    },
    "SMTP_PASSWORD": {
      "description": "SMTP password or app password",
      "required": true
    },
    "SMTP_FROM_EMAIL": {
      "description": "From email address",
      "required": true
    },
    "ONESIGNAL_APP_ID": {
      "description": "OneSignal App ID for push notifications",
      "required": false
    },
    "ONESIGNAL_REST_API_KEY": {
      "description": "OneSignal REST API Key",
      "required": false
    },
    "RATE_LIMIT_PER_USER": {
      "description": "Rate limit per user per window",
      "value": "100"
    },
    "RATE_LIMIT_WINDOW": {
      "description": "Rate limit window in seconds",
      "value": "60"
    },
    "JWT_SECRET_KEY": {
      "description": "Secret key for JWT tokens",
      "generator": "secret"
    },
    "CIRCUIT_BREAKER_FAILURE_THRESHOLD": {
      "description": "Circuit breaker failure threshold",
      "value": "5"
    },
    "CIRCUIT_BREAKER_RECOVERY_TIMEOUT": {
      "description": "Circuit breaker recovery timeout in seconds",
      "value": "60"
    }
  }
}
